# Veritabanı Bağlantısı (PostgreSQL)
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/blokaid_db?schema=public"

# Redis Bağlantısı
REDIS_URL="redis://localhost:6379"

# JWT (JSON Web Token) için gizli anahtar
JWT_SECRET="your-super-secret-jwt-key"

# Backend sunucusunun çalışacağı port
PORT=3001

# --- Solana ---
SOLANA_RPC_URL="https://api.devnet.solana.com"

# Path to the file system wallet that will pay for transactions
# This wallet needs to be funded with Devnet SOL
PAYER_WALLET_PATH="~/.config/solana/id.json"

# Solana Program IDs (auto-generated by deploy script)
DONATION_POOL_PROGRAM_ID=YourDonationPoolProgramIdHere
NFT_TRACKER_PROGRAM_ID=YourNftTrackerProgramIdHere
